<Window x:Class="RevisionAnglais.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selection des verbes" Height="600" Width="500">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Margin="0,0,0,10">
            <StackPanel Margin="20">
                <TextBlock Text="Selectionnez les verbes a reviser" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                <TextBlock Text="113 verbes irreguliers disponibles" FontSize="12" Foreground="#666" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="VerbsPanel" Margin="20"/>
        </ScrollViewer>

        <Border Grid.Row="2" Background="White">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20" Height="50">
                <Button x:Name="SelectAllButton" Click="SelectAllButton_Click" Content="Tous" Width="100" Margin="5" Background="#4CAF50" Foreground="White" FontSize="14"/>
                <Button x:Name="DeselectAllButton" Click="DeselectAllButton_Click" Content="Aucun" Width="100" Margin="5" Background="#f44336" Foreground="White" FontSize="14"/>
                <Button x:Name="StartButton" Click="StartButton_Click" Content="Commencer" Width="150" Margin="5" Background="#2196F3" Foreground="White" FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
