<Window x:Class="RevisionAnglais.ExcerciseWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevisionAnglais"
        mc:Ignorable="d"
        Title="Exercice de Revision" Height="600" Width="700" WindowStartupLocation="CenterScreen">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tete avec progression -->
        <Border Grid.Row="0" Background="White" Margin="0,0,0,10">
            <StackPanel Margin="20">
                <TextBlock x:Name="ProgressText" FontSize="14" Foreground="#666"/>
                <TextBlock x:Name="ScoreText" FontSize="16" FontWeight="Bold" Foreground="#2196F3" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Question -->
        <Border Grid.Row="1" Background="White" Margin="20,0,20,20" CornerRadius="5">
            <TextBlock x:Name="QuestionText" FontSize="18" FontWeight="Bold" TextWrapping="Wrap" Foreground="#333" Margin="20"/>
        </Border>

        <!-- Options de reponse -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="AnswerPanel" Margin="20,0,20,20" Orientation="Vertical"/>
        </ScrollViewer>

        <!-- Boutons de controle -->
        <Border Grid.Row="3" Background="White">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20" Height="50">
                <Button x:Name="BackButton" Click="BackButton_Click" Content="Retour" Width="120" Margin="5" Background="#757575" Foreground="White" FontSize="14"/>
                <Button x:Name="ResetButton" Click="ResetButton_Click" Content="Recommencer" Width="120" Margin="5" Background="#FF9800" Foreground="White" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
