<Window x:Class="RevisionAnglais.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resultats du Test" Height="700" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tete avec score -->
        <Border Grid.Row="0" Background="White" Margin="0,0,0,10">
            <StackPanel Margin="20">
                <TextBlock x:Name="ScoreTitleText" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                <TextBlock x:Name="PercentageText" FontSize="32" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,10"/>
                <TextBlock x:Name="FeedbackText" FontSize="16" TextWrapping="Wrap" Margin="0,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Liste detaillee des reponses -->
        <Border Grid.Row="1" Background="White" Margin="20,0,20,10" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#E3F2FD" Padding="15">
                    <TextBlock Text="Details des reponses:" FontSize="14" FontWeight="Bold" Foreground="#333"/>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ResultsPanel"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Boutons -->
        <Border Grid.Row="2" Background="White">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20" Height="50">
                <Button x:Name="RetryButton" Click="RetryButton_Click" Content="Retour au Menu" Width="150" Margin="5" Background="#2196F3" Foreground="White" FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
